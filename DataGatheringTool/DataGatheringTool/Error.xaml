<Window x:Class="DataGatheringTool.Error"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataGatheringTool"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Error" Height="150" Width="200">
    <Grid Margin="5">
        <TextBlock Text="Error:"></TextBlock>
        <TextBlock x:Name="ErrorText" Margin="0,0,0,0" Height="75" Text="Error Message"></TextBlock>
        <Button x:Name="ReturnButton" Click="Return" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="100" Height="20">Return</Button>
    </Grid>
</Window>
